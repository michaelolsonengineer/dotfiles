--type-set=ts=.ts
--type-set=js=.js,.jsx
--type-set=jsx=.jsx
--type-set=style=.scss,.sass,.styl,.less,.css
--type-set=log=.log
--type-set=headers=.hpp .hh .h .hxx

# ignore directories
--ignore-dir=log
--ignore-dir=tmp
--ignore-dir=bin
--ignore-dir=vendor/bundle
--ignore-dir=results
--ignore-dir=coverage
